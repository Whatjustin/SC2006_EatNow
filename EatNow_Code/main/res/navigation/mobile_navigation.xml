<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.eatnow.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.eatnow.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_deals"
        android:name="com.example.eatnow.fragment.DealsFragment"
        android:label="Deals"
        tools:layout="@layout/fragment_deals" />

    <fragment
        android:id="@+id/navigation_activities"
        android:name="com.example.eatnow.fragment.ActivitiesFragment"
        android:label="Activities"
        tools:layout="@layout/fragment_activities" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.eatnow.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>